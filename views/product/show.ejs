<%- include('../partials/header')%>
<%- include('../partials/navbar')%>
<%-include('../partials/flash')%>
<h1>Products</h1>
<div class="container">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <%for(let product of products){%>
      <div class="col">
        <div class="card h-100 ">
          <img src="<%=product.img%>" class="card-img-top productIndex" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%=product.name%></h5>
            <h3>Star rating</h3>
            <h3>&#8377;<%=product.price%></h3>
            <p class="text-center mt-5"><a href="/products/<%=product._id%>" class="btn btn-outline-success"><i class="fas fa-eye"></i></a> <a href="" class="btn btn-outline-primary outlined"><i class="fas fa-cart-plus"></i></a></p>
          </div>
        </div>
      </div>
    <%}%>
  </div>
</div>
<%- include('../partials/footer')%>
