<%- include('../partials/header')%>
<%- include('../partials/navbar')%>

<div class="container">
    <form action="/products" method="POST" class="validation" novalidate>
        <div class="mb-3">
            <label for="Input1" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="Input1" name="name" required>
          </div>
          <div class="mb-3">
            <label for="Input2" class="form-label">Price</label>
            <input type="number" class="form-control" id="Input2" name="price" required>
          </div>
          <div class="mb-3">
            <label for="Input3" class="form-label">Image</label>
            <input type="text" class="form-control" id="Input3" name="img" required>
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Description</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="desc" required></textarea>
          </div>
          <button class="btn btn-outline-primary">Submit</button>
    </form>
</div>

<%- include('../partials/validation')%>
<%- include('../partials/footer')%>